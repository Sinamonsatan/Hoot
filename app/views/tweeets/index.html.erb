<p id="notice"><%= notice %></p>

<h1>Tweeets</h1>

<table>
  <thead>
    <tr>
      <th>Tweeet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweeets.each do |tweeet| %>
      <tr>
        <h1><td><%= link_to tweeet.user.email, user_session_path(tweeet.user) %></td></h1>
        <h2><td><%= tweeet.tweeet %></td></h2>
        <h3><td><%= tweeet.created_at %></td></h3>
        <td><%= link_to 'Show', tweeet %></td>
        <td><%= link_to 'Destroy', tweeet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweeet', new_tweeet_path %>
