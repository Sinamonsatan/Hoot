<div>
<h1><%= @userinfo.email %></h1>
<h2>You have tweeted <%= @usercount.size %> time(s).</h2>
</div>
 
<div>
<% @tweeets.reverse.each do |tweeet| %>
  <% if @userinfo == tweeet.user %>
    <p>
      <tr>
        <div  class="tweet">
          <h3 class="black"><td><%= link_to tweeet.user.email, user_profile_path(tweeet.user) %></td></h3>
          <h2><td><%= tweeet.body %></td></h2>
          <h3><td><%= tweeet.created_at %></td></h3>
          <span class="twitter-button">
            <%= link_to "Delete", tweet_path(tweeet.id), :confirm => "Are you sure?", :method => :delete %>
          </span>
        </div>
      </tr>
    </p>
  <% end %>
<% end %>
</div>